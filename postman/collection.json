    {
      "name": "Links",
      "item": [
        {
          "name": "Create Link",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// ============================================",
                  "// Create Link - Post-Response Tests",
                  "// ============================================",
                  "",
                  "const body = pm.response.json();",
                  "",
                  "// --------------------------------------------",
                  "// 1. Performance Tests",
                  "// --------------------------------------------",
                  "pm.test('Response time is under 2000ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});",
                  "",
                  "// --------------------------------------------",
                  "// 2. Status Code Validation",
                  "// --------------------------------------------",
                  "pm.test('Status code is 201 Created', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "// --------------------------------------------",
                  "// 3. Response Header Validation",
                  "// --------------------------------------------",
                  "pm.test('Content-Type header is application/json', function () {",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
                  "});",
                  "",
                  "// --------------------------------------------",
                  "// 4. Required Fields Present",
                  "// --------------------------------------------",
                  "pm.test('Response contains all required fields', function () {",
                  "    pm.expect(body).to.have.property('id');",
                  "    pm.expect(body).to.have.property('url');",
                  "    pm.expect(body).to.have.property('title');",
                  "    pm.expect(body).to.have.property('summary');",
                  "    pm.expect(body).to.have.property('created_at');",
                  "    pm.expect(body).to.have.property('updated_at');",
                  "});",
                  "",
                  "// --------------------------------------------",
                  "// 5. Data Type Validation",
                  "// --------------------------------------------",
                  "pm.test('ID is a number', function () {",
                  "    pm.expect(body.id).to.be.a('number');",
                  "    pm.expect(Number.isInteger(body.id)).to.be.true;",
                  "});",
                  "",
                  "pm.test('URL is a string', function () {",
                  "    pm.expect(body.url).to.be.a('string');",
                  "});",
                  "",
                  "pm.test('Title is a string', function () {",
                  "    pm.expect(body.title).to.be.a('string');",
                  "});",
                  "",
                  "pm.test('Summary is a string', function () {",
                  "    pm.expect(body.summary).to.be.a('string');",
                  "});",
                  "",
                  "// --------------------------------------------",
                  "// 6. URL Format Validation",
                  "// --------------------------------------------",
                  "pm.test('URL has valid format', function () {",
                  "    const urlPattern = /^https?:\\/\\/.+/i;",
                  "    pm.expect(body.url).to.match(urlPattern);",
                  "});",
                  "",
                  "// --------------------------------------------",
                  "// 7. Title Validation",
                  "// --------------------------------------------",
                  "pm.test('Title is not empty', function () {",
                  "    pm.expect(body.title.trim()).to.not.be.empty;",
                  "});",
                  "",
                  "// --------------------------------------------",
                  "// 8. Timestamp Format Validation (ISO 8601)",
                  "// --------------------------------------------",
                  "pm.test('created_at is valid ISO 8601 timestamp', function () {",
                  "    const date = new Date(body.created_at);",
                  "    pm.expect(date.toString()).to.not.equal('Invalid Date');",
                  "    // Verify it can be parsed back to a valid date",
                  "    pm.expect(date.toISOString()).to.be.a('string');",
                  "});",
                  "",
                  "pm.test('updated_at is valid ISO 8601 timestamp', function () {",
                  "    const date = new Date(body.updated_at);",
                  "    pm.expect(date.toString()).to.not.equal('Invalid Date');",
                  "    // Verify it can be parsed back to a valid date",
                  "    pm.expect(date.toISOString()).to.be.a('string');",
                  "});",
                  "",
                  "// ============================================",
                  "// Auto-capture linkId for downstream requests",
                  "// ============================================",
                  "if (body && body.id) {",
                  "    pm.environment.set('linkId', body.id);",
                  "    console.log('Saved linkId:', body.id);",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [""],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"url\": \"{{$randomUrl}}\", \"title\": \" Title is:{{$randomCatchPhraseAdjective}}\",\n    \"summary\": \"{{$randomCatchPhrase}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/links",
              "host": ["{{baseUrl}}"],
              "path": ["links"]
            },
            "description": "Create a new bookmarked link. On success, auto-saves the returned `id` to `linkId` for use in subsequent requests."
          },
          "response": []
        },
        {
          "name": "List All Links",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function () {",
                  "    pm.expect(pm.response.json()).to.be.an('array');",
                  "});",
                  "",
                  "// Capture first link id for convenience",
                  "const body = pm.response.json();",
                  "if (Array.isArray(body) && body.length > 0) {",
                  "    pm.environment.set('linkId', body[0].id);",
                  "    console.log('Saved linkId from first result:', body[0].id);",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/links?url={{$randomUrl}}&title={{$randomAdjective}}&summary={{$randomWords}}",
              "host": ["{{baseUrl}}"],
              "path": ["links"],
              "query": [
                {
                  "key": "url",
                  "value": "{{$randomUrl}}",
                  "type": "text"
                },
                {
                  "key": "title",
                  "value": "{{$randomAdjective}}",
                  "type": "text"
                },
                {
                  "key": "summary",
                  "value": "{{$randomWords}}",
                  "type": "text"
                }
              ]
            },
            "description": "Get all bookmarked links, ordered by `created_at` descending (newest first). Auto-saves the first link's `id` to `linkId`."
          },
          "response": []
        },
        {
          "name": "Get Link by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has link fields', function () {",
                  "    const body = pm.response.json();",
                  "    pm.expect(body).to.have.property('id');",
                  "    pm.expect(body).to.have.property('url');",
                  "    pm.expect(body).to.have.property('title');",
                  "    pm.expect(body).to.have.property('created_at');",
                  "});",
                  "",
                  "pm.test('Returned correct link', function () {",
                  "    const body = pm.response.json();",
                  "    pm.expect(String(body.id)).to.eql(pm.environment.get('linkId'));",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/links/{{linkId}}",
              "host": ["{{baseUrl}}"],
              "path": ["links", "{{linkId}}"]
            },
            "description": "Get a single link by ID. Uses `linkId` variable (auto-set by Create or List requests)."
          },
          "response": []
        },
        {
          "name": "Update Link",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Title was updated', function () {",
                  "    const body = pm.response.json();",
                  "    pm.expect(body.title).to.eql('Updated Title');",
                  "});",
                  "",
                  "pm.test('updated_at changed', function () {",
                  "    const body = pm.response.json();",
                  "    pm.expect(body).to.have.property('updated_at');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"summary\": \"Updated summary with new notes.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/links/{{linkId}}",
              "host": ["{{baseUrl}}"],
              "path": ["links", "{{linkId}}"]
            },
            "description": "Partially update a link. All body fields are optional. Uses `linkId` variable."
          },
          "response": []
        },
        {
          "name": "Delete Link",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200 or 204', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 204]);",
                  "});",
                  "",
                  "// Clear linkId after deletion",
                  "pm.environment.unset('linkId');",
                  "console.log('Cleared linkId after deletion');"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/links/{{linkId}}",
              "host": ["{{baseUrl}}"],
              "path": ["links", "{{linkId}}"]
            },
            "description": "Delete a link by ID. Uses `linkId` variable. Clears the `linkId` variable on success."
          },
          "response": []
        }
      ],
      "description": "CRUD operations on bookmarked links. All endpoints require `x-api-key` header.",
      "auth": {
        "type": "apikey",
        "apikey": [
          {
            "key": "key",
            "value": "x-api-key",
            "type": "string"
          },
          {
            "key": "value",
