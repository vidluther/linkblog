{
  "manifest_version": 3,
  "name": "Linkblog",
  "version": "1.0.1",
  "description": "Save links to your linkblog with one click, right-click, or keyboard shortcut",
  "permissions": ["activeTab", "storage", "contextMenus", "notifications"],
  "host_permissions": ["https://api.linkblog.in/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "commands": {
    "save-current-page": {
      "suggested_key": {
        "default": "Alt+Shift+L",
        "mac": "Alt+Shift+L"
      },
      "description": "Save current page to Linkblog"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
